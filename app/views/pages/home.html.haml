.relative.overflow-hidden.h-full
  %main.h-full
    = render 'shared/hero_section'
    .relative.bg-gray-50.pt-16.pb-20.px-4.sm:px-6.lg:pb-28.lg:px-8.container
      .text-center
        %h2.text-3xl.tracking-tight.font-bold.text-gray-900.sm:text-4xl.sm:tracking-tight Latest Posts
        %p.mt-3.max-w-2xl.mx-auto.text-xl.text-gray-500.sm:mt-4 Read my latest posts related to programming.
      .mt-12.max-w-lg.mx-auto.grid.gap-5.lg:grid-cols-3.lg:max-w-none
        - if @posts.empty?
          = render 'shared/empty_section', resource: Post, link: new_post_path, message: { title: 'No posts yet', body: 'Create a post to start', button: 'Create Post' }

        - else
          - @posts.each do |post|
            .flex.flex-col.rounded-lg.shadow-lg.overflow-hidden
              = render 'shared/card', resource: post, link: post_path(post)
