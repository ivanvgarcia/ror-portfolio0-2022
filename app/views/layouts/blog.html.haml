                  .flex-shrink-0
                    %img.h-10.w-10.rounded-full{:alt => "", :src => "https://images.unsplash.com/photo-1550525811-e5869dd03032?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"}/
                  .ml-3.min-w-0.flex-1
                    .text-base.font-medium.text-gray-800.truncate Chelsea Hagon
                    .text-sm.font-medium.text-gray-500.truncate chelsea.hagon@example.com
