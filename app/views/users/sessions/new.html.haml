.min-h-full.flex
  .flex-1.flex.flex-col.justify-center.py-12.px-4.sm:px-6.lg:flex-none.lg:px-20.xl:px-24
    .mx-auto.w-full.max-w-sm.lg:w-96
      %div
        %img.h-12.w-auto{:alt => "Workflow", :src => "https://tailwindui.com/img/logos/workflow-mark.svg?color=red&shade=600"}/
        %h2.mt-6.text-3xl.tracking-tight.font-bold.text-gray-900 Sign in to your account
        .mt-6
          = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'space-y-6') do |f|
            %div
              = f.label :email, class: 'block text-sm font-medium text-gray-700'
              .mt-1
                = f.email_field :email, autofocus: true, autocomplete: "email", class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm'
            .space-y-1.mb-4
              = f.label :password, class: 'block text-sm font-medium text-gray-700'
              .mt-1
                = f.password_field :password, autocomplete: "current-password", class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm'
            .flex.items-center.justify-between.mb-4
              - if devise_mapping.rememberable?
                .flex.items-center
                  = f.check_box :remember_me, class: 'h-4 w-4 text-red-700 focus:ring-red-500 border-gray-300 rounded'
                  = f.label :remember_me, class: 'ml-2 block text-sm text-gray-900'
              .text-sm
                %a.font-medium.text-red-700.hover:text-red-500{:href => "#"} Forgot your password?
            %div
              = f.button class: 'w-full cursor-pointer flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-700 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' do
                %span.enabled-button Login
                %span.disabled-button Processing...
  .hidden.lg:block.relative.w-0.flex-1
    %img.absolute.inset-0.h-full.w-full.object-cover{:alt => "", :src => "https://images.unsplash.com/photo-1505904267569-f02eaeb45a4c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1908&q=80"}/

= render "users/shared/links"
