.container.mx-auto.px-5
  %h1.text-center Projects
  - if @projects.empty?
    .text-center.mt-6
      %svg.mx-auto.h-12.w-12.text-gray-400{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", :viewbox => "0 0 24 24"}
        %path{:d => "M9 13h6m-3-3v6m-9 1V7a2 2 0 012-2h6l2 2h6a2 2 0 012 2v8a2 2 0 01-2 2H5a2 2 0 01-2-2z", "stroke-linecap" => "round", "stroke-linejoin" => "round", "stroke-width" => "2", "vector-effect" => "non-scaling-stroke"}
      %h3.mt-2.text-sm.font-medium.text-gray-900 No projects
      %p.mt-1.text-sm.text-gray-500 Get started by creating a new project.
      .mt-6
      -if can? :create, @project
        = link_to new_project_path do
          %button.btn{type: "button"}
            / Heroicon name: solid/plus
            %svg.-ml-1.mr-2.h-5.w-5{"aria-hidden" => "true", :fill => "currentColor", :viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
              %path{"clip-rule" => "evenodd", :d => "M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z", "fill-rule" => "evenodd"}
            New Project
  - else
    %div.grid.grid-cols-full.md:grid-cols-2.my-4.gap-4
      - @projects.each do |project|
        = link_to project_path(project.id) do
          .card.w-full.bg-red-500.text-white.rounded.shadow-md
            %div.p-6
              = project.name
              = project.description
            = image_tag(project.image)

    -if can? :create, @project
      = link_to new_project_path do
        %button.inline-flex.items-center.px-4.py-2.border.border-transparent.shadow-sm.text-sm.font-medium.rounded-md.text-white.bg-indigo-600.hover:bg-indigo-700.focus:outline-none.focus:ring-2.focus:ring-offset-2.focus:ring-indigo-500{type: "button"}
          / Heroicon name: solid/plus
          %svg.-ml-1.mr-2.h-5.w-5{"aria-hidden" => "true", :fill => "currentColor", :viewbox => "0 0 20 20", :xmlns => "http://www.w3.org/2000/svg"}
            %path{"clip-rule" => "evenodd", :d => "M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z", "fill-rule" => "evenodd"}
          New Project

  = paginate @projects